#!/usr/bin/env ruby
require_relative '../lib/grouping.rb'

file = open("input/one_card_section.json")
json = file.read
parsed = JSON.parse(json)
trello_summary = Grouping.new(parsed)


config_file = File.read('config/trello_fields.txt')
all_configs = []

lines = config_file.split("\n")
lines.each { |line|
  field = line.split(", ").inspect
  field = field.gsub!(/\W/, "") 
  puts field
  puts trello_summary.returnsInformation(field)
  all_configs << line.split(", ")
}
puts trello_summary.formatsReferenceForColoredLabels
puts trello_summary.returnsInformation("cards", "name", "url")
puts trello_summary.returnsInformation("lists", "name")
